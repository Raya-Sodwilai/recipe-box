@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add a tag</h2>

<h4>Add a tag to this recipe: @Html.DisplayFor(model => model.RecipeName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.Label("Select tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Save" />
}

<h3>@Html.ActionLink("Back to recipe", "Details", new {id = Model.RecipeId})</h3>
<h3>@Html.ActionLink("Back to list", "Index")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>