@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<div class="container">
  <h2>Create a new recipe</h2>

  @using(Html.BeginForm())
  {
    <div class="form-group">
      @Html.Label("Recipe name")
      @Html.EditorFor(model => model.RecipeName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
        
    <div class="form-group">
      @Html.Label("Recipe instructions")
      @Html.EditorFor(model => model.RecipeInstructions, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
      @Html.Label("Recipe's Rating")
      @Html.EditorFor(model => model.RecipeRating, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "10"} })
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.Ingredients)
      @Html.ListBox("IngredientId")
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.Tags)
      @Html.ListBox("TagId")
    </div>
        
    <input type="submit" value="Add a new recipe" class="btn btn-primary" />
  }

  <h3>@Html.ActionLink("Recipes List", "Index")</h3>
  <h3>@Html.ActionLink("Home", "Index", "Home")</h3>
</div>